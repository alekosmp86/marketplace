generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Market {
  id        String     @id @default(uuid())
  name      String
  products  Product[]
  sales     Sale[]
  saleItems SaleItem[]

  @@unique([name])
}

model Product {
  id    String @id @default(uuid())
  name  String

  market   Market @relation(fields: [marketId], references: [id])
  marketId String

  items SaleItem[]

  @@index([name, marketId])
}

model Sale {
  id        String @id @default(uuid())
  total     Float
  createdAt String // YYYY-MM-DD

  marketId  String
  market    Market @relation(fields: [marketId], references: [id])

  items     SaleItem[]

  @@index([marketId, createdAt])
}

model SaleItem {
  id        String @id @default(uuid())

  marketId  String
  market    Market @relation(fields: [marketId], references: [id])

  saleId    String
  sale      Sale   @relation(fields: [saleId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  subtotal  Float

  @@index([marketId, productId])
  @@index([saleId])
}

