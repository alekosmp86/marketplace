generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    String @id @default(cuid())
  name  String
  price Float

  items SaleItem[]
}

model Sale {
  id        String @id @default(cuid())
  total     Float
  createdAt String //YYYY-MM-DD

  items SaleItem[]
}

model SaleItem {
  id String @id @default(cuid())

  sale   Sale   @relation(fields: [saleId], references: [id])
  saleId String

  product   Product @relation(fields: [productId], references: [id])
  productId String

  weight   Float // kg (1 = unit product)
  price    Float // price per kg at time of sale
  subtotal Float // weight * price
}
