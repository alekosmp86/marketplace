generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Market {
  id        String     @id @default(cuid())
  name      String
  products  Product[]
  sales     Sale[]
  saleItems SaleItem[]

  @@unique([name])
}

model Product {
  id    String @id @default(cuid())
  name  String
  price Float

  market   Market @relation(fields: [marketId], references: [id])
  marketId String

  items SaleItem[]

  @@unique([name])
}

model Sale {
  id        String @id @default(cuid())
  total     Float
  createdAt String //YYYY-MM-DD

  market   Market @relation(fields: [marketId], references: [id])
  marketId String

  items SaleItem[]
}

model SaleItem {
  id String @id @default(cuid())

  market   Market @relation(fields: [marketId], references: [id])
  marketId String

  sale   Sale   @relation(fields: [saleId], references: [id])
  saleId String

  product   Product @relation(fields: [productId], references: [id])
  productId String

  weight   Float // kg (1 = unit product)
  price    Float // price per kg at time of sale
  subtotal Float // weight * price
}
